
@model API_MVC.Models.Contato

@{
    ViewData["Title"] = "Criar Novo Contato";
}

<h2>Criar Novo Contato</h2>

<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ativo" class="control-label"></label>
                <input type="checkbox" asp-for="Telefone" class="form-check-input" />
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
             </div>
            </form>
        </div>
</div>

<hr />
<div>
    <a asp-action="Index">Voltar para a lista de contatos</a>
</div>